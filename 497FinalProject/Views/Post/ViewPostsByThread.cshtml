@model IEnumerable<_497FinalProject.Models.PostModel>

@{
    ViewBag.Title = "Thread Posts";
}

<h2>THREAD</h2>
<p>
    @Html.ActionLink("Create New", "CreatePost", "Post", null, new { @style = "color: black;" })
</p>


    <body>

        <div class="container-fluid" >
            @foreach (var item in Model)
            {
                <div class="row.row-eq-height" style="grid-row:">

                    <div class="col-sm-3 bg-primary">

                        <b>  @Html.DisplayNameFor(model => model.PostUserName)</b>
                        <br> @Html.DisplayFor(modelItem => item.PostUserName)

                    </div>

                    <div class="col-sm-5 bg-secondary" style="background-color:darkgrey">
                        <b>  @Html.DisplayNameFor(model => model.PostBody)</b>
                        <br />@Html.DisplayFor(modelItem => item.PostBody)

                    </div>
                    <div class="col-sm-3">
                        <b>Time Posted</b>
                        <br />@Html.DisplayFor(modelItem => item.TimePost);
                    </div>
                    <div class="col-sm-1">
                        <span class="glyphicon glyphicon-thumbs-up"></span>  @Html.DisplayFor(modelItem => item.Approval)
                         <br />
                         <span class="glyphicon glyphicon-thumbs-down"></span> @Html.DisplayFor(modelItem => item.Disapproval)
                    </div>
             

                </div>
            }
        </div>
</body>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PostID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PostUserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Subject)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PostBody)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TimePost)
        </th>
        <th>
            Actions
            <span class="glyphicon glyphicon-thumbs-up"></span>
            <span class="glyphicon glyphicon-thumbs-down"></span>
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PostID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PostUserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Subject)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PostBody)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TimePost)
            </td>
            <td>

                @Html.ActionLink("Delete", "DeletePost", "post", null, new { @style = "color: black;" })
                
            </td>
        </tr>
    }

</table>
    
<div>
    @Html.ActionLink("Back to List", "Index", "Class", null, new { @style = "color: black;" })
</div>



