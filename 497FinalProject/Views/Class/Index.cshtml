@model _497FinalProject.Models.ClassModel

@{
    ViewBag.Title = "Index";
}


<p>
    @Html.ActionLink("Create New Class", "CreateNewClass", "Class", null, new { @style = "color: white;" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ClassID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ClassName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProfessorID)
        </th>
        
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ClassID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClassName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProfessorID)
            </td>
            <td>
                @Html.ActionLink("Delete", "DeleteClass", null, new { @style = "color: white;" })
            </td>
        </tr>
    }

</table>

