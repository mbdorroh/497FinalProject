@model _497FinalProject.Models.ClassModel
@{
    ViewBag.Title = " Delete Class";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("DeleteClass", "Class", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Are you sure you want to delete this class and its threads?</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.ClassID, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.ClassID, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.ClassID, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ClassName, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.ClassName, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.ClassName, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ProfessorID, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.ProfessorID, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.ProfessorID, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Delete" />
        </div>
    </div>

    <div>
        @Html.ActionLink("Back to List", "Index", "Class", null, new { @style = "color: black;" })
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

